<h1>
  Manage table
  <small>
    <%= p [controller.controller_name, controller.action_name].join '#' %>
  </small>
</h1>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Volume</th>
      <th>Quantity</th>
      <th>Tag</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @household_items.each do |household_item| %>
      <tr>
        <td><%= household_item.name %></td>
        <td><%= household_item.volume %></td>
        <td><%= household_item.quantity %></td>
        <td><%= household_item.tag %></td>
        <td><%= household_item.description %></td>
        <td><%= link_to 'Show', household_item %></td>
        <td><%= link_to 'Edit', edit_household_item_path(household_item) %></td>
        <td><%= link_to 'Destroy', household_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
