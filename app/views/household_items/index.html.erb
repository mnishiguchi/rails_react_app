<h1>
  Manage table
  <small>
    <%= p [controller.controller_name, controller.action_name].join '#' %>
  </small>
</h1>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Volume</th>
      <th>Quantity</th>
      <th>Tag</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @household_items.each do |household_item| %>
      <%= render 'household_items/table_row_editable', household_item: household_item %>
    <% end %>
  </tbody>
</table>
